<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm Khuyến Mãi"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hình"
            android:textColor="@color/black"
            android:textSize="18dp"
            />

        <ImageView
            android:id="@+id/imgAddKM"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:src="@drawable/no_image"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:scaleType="centerCrop"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên khuyến mãi:"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_marginTop="18dp"
            />

        <EditText
            android:id="@+id/txtNameAddKM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phần trăm khuyến mãi:"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_marginTop="18dp"
            />

        <EditText
            android:id="@+id/txtPhanTramAddKM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày bắt đầu khuyến mãi:"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_marginTop="18dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="10"
            >

            <TextView
                android:id="@+id/txtNgayBatDauAddKM"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:height="39dp"
                android:textSize="18sp"
                android:hint="dd/MM/yyyy"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                />

            <ImageView
                android:id="@+id/imgLichBD"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_calendar"
                />
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày kết thúc khuyến mãi:"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_marginTop="18dp"
            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="10"
        >

        <TextView
            android:layout_weight="9"
            android:id="@+id/txtNgayKetThucAddKM"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:height="39dp"
            android:textSize="18sp"
            android:hint="dd/MM/yyyy"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            />

        <ImageView
            android:id="@+id/imgLichKT"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_calendar"
            />

    </LinearLayout>



        <Button
            android:id="@+id/btnThemKM"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Thêm Khuyến Mãi"
            android:textSize="18sp"
            android:backgroundTint="@color/red"
            android:layout_marginTop="18dp"
            />
    </LinearLayout>



</ScrollView>